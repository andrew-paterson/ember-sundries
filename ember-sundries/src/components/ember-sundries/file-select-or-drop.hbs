<div ...attributes>
  <EmberSundries::FileSelect
    @buttonText={{@buttonText}}
    @allowedFileTypesList={{@allowedFileTypesList}}
    @allowedMimeTypesList={{@allowedMimeTypesList}}
    @multiple={{@multiple}}
    @fileProcessingAction={{@fileProcessingAction}}
    class={{@fileSelectButtonClass}}
    @disabled={{@disabled}}
  />
  <EmberSundries::FileDrop
    @allowedFileTypesList={{@allowedFileTypesList}}
    @fileProcessingAction={{@fileProcessingAction}}
    @fileDropTextPrompt={{@fileDropTextPrompt}}
    @fileDropTextPromptClass={{@fileDropTextPromptClass}}
    @disabled={{@disabled}}
    @fileDroppedWhenDisabledAction={{@fileDroppedWhenDisabledAction}}
  />
</div>
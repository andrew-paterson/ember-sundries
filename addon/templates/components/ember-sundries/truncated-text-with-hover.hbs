{{#if this.truncated}}
  <EmberSundries::basicDropdownVTwoHover as |dd|>
    <dd.Trigger>
      {{this.truncated}}{{this.afterTruncatedText}}
    </dd.Trigger>
    <dd.Content>
      <div
        class="box-arrow bg-white body-text monospaced border rounded padding-lg card-box-shadow"
      >
        {{@text}}
      </div>
    </dd.Content>
  </EmberSundries::basicDropdownVTwoHover>
{{else}}
  {{@text}}
{{/if}}